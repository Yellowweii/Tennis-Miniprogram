<view class="cu-custom" style="height:{{appBarHeight}}px">
  <view class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}} black" style="height:{{appBarHeight}}px;padding-top:{{statusBarHeight}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
    <view class="action padding-left-sm" bindtap="BackPage" wx:if="{{isBack}}">
      <text class="cuIcon-back text-gray"></text>
      <slot name="backText"></slot>
    </view>
    <view class="action border-custom" wx:if="{{isCustom}}" style="width:{{menu.width}}px;height:{{menu.height}}px;margin-left:calc(750rpx - {{menu.right}}px)">
      <text class="cuIcon-back" bindtap="BackPage"></text>
      <text class="cuIcon-homefill" bindtap="toHome"></text>
    </view>
    <view style="top:{{statusBarHeight}}px">
      <slot name="content"></slot>
    </view>
    <slot name="right"></slot>
  </view>
</view>